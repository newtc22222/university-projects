<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:contentDescription="@string/app_name"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/image_login" />

    <LinearLayout
        android:layout_width="350sp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_box_rounded_red"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/notop_sans_regular"
            android:text="@string/dang_nhap_uppercase"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editText_username_login"
            android:layout_width="285sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:autofillHints="name"
            android:background="@drawable/bg_edit_text_rounded"
            android:hint="@string/hint_username"
            android:inputType="text"
            android:maxLines="1"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="0sp"
            android:paddingBottom="15dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_password_login"
            android:layout_width="285sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:autofillHints="password"
            android:background="@drawable/bg_edit_text_rounded"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingTop="15dp"
            android:paddingEnd="0sp"
            android:paddingBottom="15dp"
            android:textColorHint="#78909C"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_login_login"
            android:layout_width="285sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_button_main_function"
            android:fontFamily="@font/notop_sans_regular"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/dang_nhap"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button_signup_login"
            android:layout_width="285sp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/bg_button_sub_function"
            android:fontFamily="@font/notop_sans_regular"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:text="@string/dang_ky"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </LinearLayout>
</LinearLayout>