<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ChatFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="360sp"
        android:layout_height="87sp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:elevation="10dp"
        android:background="@drawable/bg_function">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="47sp"
            android:background="@color/main_color">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/check"
                android:textColor="@color/white"
                android:fontFamily="@font/notop_sans_regular"
                android:layout_gravity="center"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/btnGioHang"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:background="@color/main_color">
                <TextView
                    android:id="@+id/tvGioHang"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/cart"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notop_sans_regular"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnDangDen"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvDangDen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/check_coming"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notop_sans_regular"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnLichSu"
                android:layout_width="120sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvLichSu"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/history"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notop_sans_regular"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="360sp"
        android:layout_height="489dp"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@color/white"
        android:elevation="7sp">

        <LinearLayout
            android:id="@+id/cartContainer"
            android:layout_width="360sp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btnThanhToan"
        android:layout_width="360sp"
        android:layout_height="wrap_content"
        android:text="@string/payment"
        android:layout_gravity="center"
        android:layout_marginTop="10sp"
        android:background="@drawable/bg_box_rounded_red"
        android:textColor="@color/white"
        android:elevation="10sp"/>

</LinearLayout>